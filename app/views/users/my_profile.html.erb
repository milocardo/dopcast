<div class="container-text">


    <h3>Nice to see you again <%= @user.username %>!</h3>



    <!-- < %= link_to "Create a new playlist", new_user_playlist_path(current_user) % >
     -->

     <%= link_to "Whose friends of yours use dopcast too?", users_path %>


    <h2>Followers</h2>
    <div class="container-carousel">

    <% @user.followers.each do |follower| %>
      <%= link_to follower.username, user_path(follower.id) %>
    <% end %>
    </div>


    <h2>Following</h2>
    <div class="container-carousel">
    <% @user.all_following.each do |following| %>
      <% if following.is_a? User %>
        <%= link_to following.username, user_path(following.id) %>
      <% end %>
    <% end %>
    </div>



    <h2>Subscriptions</h2>

    <% @user.all_following.each do |following| %>
      <% if following.is_a? Podcast %>
        <%= link_to following.title, podcast_path(following.id) %>
      <% end %>
    <% end %>


    <h2>Playlists</h2>

    <% current_user.playlists.each do |playlist| %>
    <%= link_to playlist.name, playlist_path(playlist) %>
    <% end %>

      <%= link_to "Add or change your photo", edit_user_path(@user) %>


    <%= cl_image_tag @user.photo, height: 300, width: 400, crop: :fill %>

</div>
