
<li class="list-group-item">
  <div class="feed-container">
  <%= cl_image_tag a.trackable.user, class: "img-feed" %>
  <span class="glyphicon glyphicon-plus"></span>
  <div class="feed-content">
  <small class="text-muted"><%= a.created_at.strftime('%H:%M:%S %-d %B %Y') %></small><br/>
  <% if a.trackable %>
    <%= link_to a.trackable.user.username, user_path(a.trackable.user) %> created the playlist <%= link_to a.trackable.name, playlist_path(a.trackable) %>
  <% else %>
    A podcast that is currently deleted was added.
  <% end %>
    </div>
  </div>
</li>




