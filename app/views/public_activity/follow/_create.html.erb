<li class="list-group-item">
  <div class="feed-container">
  <%= cl_image_tag a.trackable.follower.photo, class: "img-feed" %>

  <span class="glyphicon glyphicon-heart"></span>
    <div class="feed-content">

    <small class="text-muted"><%= a.created_at.strftime('%H:%M:%S %-d %B %Y') %></small>
  <br>
  <% if a.trackable %>
  <% if a.trackable.followable_type == "Podcast" %>
  <p><%= link_to a.trackable.follower.username, user_path(a.trackable.follower_id) %> started following <%= link_to a.trackable.followable.title, podcast_path(a.trackable.followable) %></p>
  <% elsif a.trackable.followable_type == "User" %>
  <p><%= link_to a.trackable.follower.username, user_path(a.trackable.follower_id) %> started following <%= link_to a.trackable.followable.username, user_path(a.trackable.followable) %></p>


  <% else %>
    A following that is currently deleted was added.
  <% end %>
  <% end %>
    </div>
  </div>
</li>

