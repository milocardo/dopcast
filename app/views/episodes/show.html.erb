<%= render "shared/sidebar" %>
<div class="container-text">
  <div class="container-show">
    <h1><%= @episode.title %></h1>
    <div class="podcard-show">
      <div class="row">
        <div class="col-xs-3">
          <div class="podcard-img">
            <%= image_tag @podcast.image, class: "img-responsive" %>
          </div>
        </div>
        <div class="col-xs-8">
          <h2>Author: <%= @episode.podcast.artist_name %></h2>
          <h3>Language: <%= @episode.podcast.language %></h3>
          <h3>Language: <%= @episode.podcast.country %></h3>
          <%= link_to like_podcast_path(@podcast), class: "like", method: :post do %>
          <button type="button" class="btn btn-info" aria-label="Left Align">
            <span class="glyphicon glyphicon-thumbs-up glyphicon-align-center" aria-hidden="true"></span>
            <span class="badge"><%= @podcast.get_upvotes.size %></span>
          </button>
          <% end %>
          <%= link_to unlike_podcast_path(@podcast), class: "like", method: :post do %>
          <button type="button" class="btn btn-info" aria-label="Left Align">
            <span class="glyphicon glyphicon-thumbs-down glyphicon-align-center" aria-hidden="true"></span>
            <span class="badge"><%= @podcast.get_downvotes.size %></span>
          </button>
          <% end %>
        </div>
      </div>
      <div class="pod-descript">
        <div class="row">
          <div class="col-xs-12 col-sm-12 col-md-12">
            <p><%= @episode.description %></p>
          </div>
        </div>
      </div>
    </div>
    <div class="reviews">
      <h3>Did you like <%= @episode.title %> ? Leave a comment below!</h3>
      <%= render 'comments/form_episodes', commentable: @episode %>
      <% if @episode.comments  %>
      <% @episode.comments.each do |comment| %>
      <p><strong><%= comment.user.email %> :</strong></p>
      <p><%= comment.comment %></p>
      <br>
      <% end %>
      <% end %>
    </div>
  </div>
</div>
